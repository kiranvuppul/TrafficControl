<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	      package="com.example.trafficcontrol"
	      android:versionCode="1"
	      android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" android:targetSdkVersion="15" />
	<uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
       
    <application android:allowBackup="true"
		         android:icon="@drawable/ic_launcher"
		         android:label="Cyberabad Traffic Volunteer"
		         android:theme="@style/AppStyle" 
		         android:screenOrientation="portrait">
		         
        <activity android:name="com.example.trafficcontrol.SplashActivity"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.trafficcontrol.LoginActivity" 
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait"/>
        
        <activity android:name="com.example.trafficcontrol.MainActivity"
            	  android:icon="@drawable/ic_launcher"
				  android:launchMode="singleTop"
                  android:screenOrientation="portrait"/>
        
        <activity android:name="com.example.trafficcontrol.ChangePasswordActivity"
             	  android:launchMode="singleTop"
                  android:screenOrientation="portrait"/>
         
        <activity android:name="com.example.trafficcontrol.SetProfileActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait"/>
        
        <activity android:name="com.example.trafficcontrol.MsgListActivity"
             	  android:launchMode="singleTop"
                  android:screenOrientation="portrait"/>
        
    </application>

</manifest>